.stack-of-pages > .page

  .section
    padding: 30px 0

  .block-images
    clearfix()
    align-items: center
    display: flex
    justify-content: center
    margin: 25px -50px
    text-align: center

    &.short

      > *
        max-height: 155px

    > *
      border: 3px solid white
      box-sizing: border-box
      cursor: pointer
      margin: 15px
      max-width: 300px
      flex-grow: 1

  .team-member,
  .activity-or-guide
    box-sizing: border-box
    clearfix()
    padding: 25px

    &:nth-child(2n + 1)
      background: rgba(black, 0.05)
      
    img
      border-radius: 3px
      float: left
      margin: 0 2em 2em 0
      max-width: 200px

  img
    border: 3px solid white
    border-radius: 2px

    &.small
      width: 250px

    &.right
      float: right
      margin: 0 0 2em 2em

    &.left
      float: left
      margin: 0 2em 2em 0

  .box
    box-sizing: border-box
    clearfix()
    margin: 0 -22px
    padding: 22px

    &.gray
      background: #eee
