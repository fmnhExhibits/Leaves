html
  background: #ccc
  font: 14px "Helvetica Neue", sans-serif

body
  margin: 0

  > .field
    background: $green
    height: 50%
    left: 0
    position: fixed
    top: 0
    right: 0

#app
  position: relative

  > header
    background: #333
    color: #fff

    nav
      font-size: 12px
      margin: 0 auto
      text-transform: uppercase
      width: 830px

      ul
        margin: 0
        padding: 0

        li
          display: inline-block

          a
            color: inherit
            display: block
            letter-spacing: 1px
            padding: 10px 10px
            text-decoration: inherit

          &:first-child a
            padding-left: 0

          &.logo
            small
              border-bottom: 1px solid
              display: inline-block
              font-size: 0.67em
              line-height: 1.5
              margin-top: 1px
              vertical-align: 0.33em

  > .main
    margin: 0 auto
    width: 830px

    > .page
      margin: 60px 0
      background: #f9f9f9
      box-shadow: 0 1px 2px rgba(#000, 0.3)
      display: none
      overflow: hidden
      position: relative

      &.content
        padding: 30px 60px 60px

      &.active
        display: block

button
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  margin: 0
  padding: 0
