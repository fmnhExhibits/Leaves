<% Subject = require 'zooniverse/models/subject' %>
<% t = require 't7e' %>

<div class="classification-summary-content">
  <%- t 'h2', 'classifier.summary.header' %>
  <%- t 'p', 'classifier.summary.excerpt' %>
  <div class="columns">
    <% if @classification: %>
      <div class="column one-third">
        <div id="favorite" class="action">
          <i id="favorite-icon" class="fa fa-heart-o"></i>
          <%- t 'span', 'classifier.summary.favorite' %>
        </div>
      </div>
    <% end %>
    <div class="column one-third">
      <div id="discuss" class="action">
        <a href="<%- Subject.current.talkHref() %>">
          <i class="fa fa-comments-o"></i>
          <%- t 'span', 'classifier.summary.discuss' %>
        </a>
      </div>
    </div>
  </div>
  <% unless Subject.current.tutorial: %>
    <% if @askForSurvey: %>
      <p>Thank you for your work! We'd love it if you took the time to complete <a href="https://www.google.com">this survey</a> about your Micrplants experience. Thank you!</p>
    <% else if @seenThisSession() > @requestedClassifications: %>
      <p>You have marked <%- @seenThisSession() %> so far this session!</p>
    <% else: %>
      <p>We ask each person to mark 5 images. You have marked <%- @seenThisSession() %> so far!</p>
    <% end %>
  <% end %>
  <div class="call-to-continue">
    <%- t 'p', 'classifier.summary.readyToContinue' %>
  </div>
</div>
